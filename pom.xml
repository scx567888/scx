<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>cool.scx</groupId>
        <artifactId>scx-parent</artifactId>
        <version>28</version>
        <relativePath/>
    </parent>

    <artifactId>scx</artifactId>
    <version>3.8.11</version>
    <packaging>pom</packaging>

    <name>SCX</name>
    <description>
        A simple Web development framework
    </description>
    <url>https://github.com/scx567888/scx</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://github.com/scx567888/scx/blob/master/LICENSE</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>scx567888</id>
            <name>scx567888</name>
            <email>scx567888@outlook.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/scx567888/scx.git</connection>
        <developerConnection>scm:git:https://github.com/scx567888/scx.git</developerConnection>
        <url>https://github.com/scx567888/scx</url>
    </scm>

    <modules>
        <module>scx-app</module>
        <module>scx-config</module>
        <module>scx-data-serialization</module>
        <module>scx-data-jdbc</module>
        <module>scx-http-routing</module>
        <module>scx-jdbc</module>
        <module>scx-jdbc-spy</module>
        <module>scx-jdbc-mysql</module>
        <module>scx-web</module>
        <module>scx-websocket</module>
        <module>scx-websocket-routing</module>
        <module>scx-websocket-x</module>
    </modules>

    <build>
        <plugins>

            <!-- 此插件用于将项目打包为 可执行 jar 包-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <!-- 因为 scx 并不是可执行 jar 包, 所以此处不添加 classpath 到描述文件中 -->
                            <addClasspath>false</addClasspath>
                        </manifest>
                    </archive>
                    <!-- 此处因为没有类似 maven-source-plugin 插件中 excludeResources 的选项 -->
                    <!-- 所以在这里手动排除资源文件 , 具体文件说明见下方 -->
                    <excludes>
                        <!-- 默认 git 占位空文件 -->
                        <exclude>/.gitkeep</exclude>
                    </excludes>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-data</artifactId>
                <version>${scx-data.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-collections</artifactId>
                <version>${scx-collections.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-logging</artifactId>
                <version>${scx-logging.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-common</artifactId>
                <version>${scx-common.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-ansi</artifactId>
                <version>${scx-ansi.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-reflect</artifactId>
                <version>${scx-reflect.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-object</artifactId>
                <version>${scx-object.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-http</artifactId>
                <version>${scx-http.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-http-x</artifactId>
                <version>${scx-http-x.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-scheduling</artifactId>
                <version>${scx-scheduling.version}</version>
            </dependency>

            <dependency>
                <groupId>cool.scx</groupId>
                <artifactId>scx-bean</artifactId>
                <version>${scx-bean.version}</version>
            </dependency>

            <!-- 数据库连接池 用于减少数据库连接创建时的性能消耗 -->
            <dependency>
                <groupId>com.zaxxer</groupId>
                <artifactId>HikariCP</artifactId>
                <version>${hikaricp.version}</version>
            </dependency>

            <!-- Freemarker 用于前台页面渲染工作 -->
            <dependency>
                <groupId>org.freemarker</groupId>
                <artifactId>freemarker</artifactId>
                <version>${freemarker.version}</version>
            </dependency>

            <!-- 图像处理包工具包 , 用于对图片进行简单的处理,如 切割,缩放 ,转码等 -->
            <dependency>
                <groupId>net.coobird</groupId>
                <artifactId>thumbnailator</artifactId>
                <version>${thumbnailator.version}</version>
            </dependency>

            <!-- 轻量级的加密解密工具包 , 用于简化一些密码校验及敏感数据加密的操作 -->
            <dependency>
                <groupId>org.jasypt</groupId>
                <artifactId>jasypt</artifactId>
                <version>${jasypt.version}</version>
            </dependency>

            <!-- mysql 驱动 -->
            <dependency>
                <groupId>com.mysql</groupId>
                <artifactId>mysql-connector-j</artifactId>
                <version>${mysql-connector-j.version}</version>
            </dependency>

            <!-- slf4j 日志框架 -->
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${slf4j.version}</version>
            </dependency>

            <!-- log4j2 -->
            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-api</artifactId>
                <version>${log4j2.version}</version>
            </dependency>

            <!-- TestNG 测试包 -->
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>${testng.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <properties>

        <!-- *********************** 以下为依赖包版本 *********************** -->
        <scx-data.version>4.3.0</scx-data.version>
        <scx-collections.version>4.3.0</scx-collections.version>
        <scx-logging.version>4.1.0</scx-logging.version>
        <scx-common.version>4.3.0</scx-common.version>
        <scx-ansi.version>4.2.0</scx-ansi.version>
        <scx-reflect.version>4.2.0</scx-reflect.version>
        <scx-object.version>2.0.0</scx-object.version>
        <scx-scheduling.version>4.0.0</scx-scheduling.version>
        <scx-bean.version>4.1.0</scx-bean.version>
        <scx-http.version>3.9.6</scx-http.version>
        <scx-http-x.version>3.9.1</scx-http-x.version>
        <hikaricp.version>7.0.2</hikaricp.version>
        <freemarker.version>2.3.34</freemarker.version>
        <thumbnailator.version>0.4.21</thumbnailator.version>
        <jasypt.version>1.9.3</jasypt.version>
        <mysql-connector-j.version>9.2.0</mysql-connector-j.version>
        <slf4j.version>2.0.17</slf4j.version>
        <log4j2.version>2.25.2</log4j2.version>
        <testng.version>7.11.0</testng.version>

    </properties>

</project>
